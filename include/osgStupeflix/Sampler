#ifndef OSGSTUPEFLIX_SAMPLER
#define OSGSTUPEFLIX_SAMPLER 1

#include <osgAnimation/Sampler>
#include <osgStupeflix/Interpolator>

namespace osgAnimation
{
    typedef TemplateSampler<FloatEquiCubicBezierInterpolator> FloatEquiCubicBezierSampler;
    typedef TemplateSampler<DoubleEquiCubicBezierInterpolator> DoubleEquiCubicBezierSampler;
    typedef TemplateSampler<Vec2EquiCubicBezierInterpolator> Vec2EquiCubicBezierSampler;
    typedef TemplateSampler<Vec3EquiCubicBezierInterpolator> Vec3EquiCubicBezierSampler;
    typedef TemplateSampler<Vec4EquiCubicBezierInterpolator> Vec4EquiCubicBezierSampler;

    typedef TemplateSampler<FloatVariableSpeedCubicBezierInterpolator> FloatVariableSpeedCubicBezierSampler;
    typedef TemplateSampler<DoubleVariableSpeedCubicBezierInterpolator> DoubleVariableSpeedCubicBezierSampler;
    typedef TemplateSampler<Vec2VariableSpeedCubicBezierInterpolator> Vec2VariableSpeedCubicBezierSampler;
    typedef TemplateSampler<Vec3VariableSpeedCubicBezierInterpolator> Vec3VariableSpeedCubicBezierSampler;
    typedef TemplateSampler<Vec4VariableSpeedCubicBezierInterpolator> Vec4VariableSpeedCubicBezierSampler;

}

#endif
